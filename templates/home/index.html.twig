{% extends 'layout.html.twig' %}
{% block title %}
	{{ parent() }}
	- Accueil
{% endblock %}
{% block content %}
	<div class="row mt-5 justify-content-center text-center">
		<h1>Dernier article publié:</h1>

		<div>
			<h3>Titre de l'article:
				{{dernierArticlePublie.titre}}</h3>
			{% if dernierArticlePublie.dateDeCreation is not null %}
				<h6>Date de publication de l'article :
					{{ dernierArticlePublie.dateDeCreation | date("d/m/y à H\hi")}}</h6>
			{% endif %}

			<h6>

				{% if dernierArticlePublie.dateDeModification is not null %}
					Modifié le :
					{{ dernierArticlePublie.dateDeModification | date("d/m/y à H\hi") }}</h6>
			{% endif %}


			<h6>Auteur de l'article</h6>
			<p>Contenu de l'article:
				{{dernierArticlePublie.contenu|slice(0,150)}}...</p>

		</div>
	</div>
{% endblock %}
